{
  "name": "pinia-plugin-storage",
  "version": "0.1.0",
  "description": "A Pinia plugin for state persistence with multiple storage adapters",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENCE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "dev:demo": "npm run build && cd demo && npm install && npm run dev",
    "test:demo": "npm run build && cd demo && npm install && npm run type-check"
  },
  "keywords": [
    "pinia",
    "vue",
    "state",
    "persistence",
    "storage",
    "plugin",
    "localStorage",
    "sessionStorage",
    "indexedDB",
    "cookies"
  ],
  "author": "Your Name",
  "license": "MIT",
  "peerDependencies": {
    "pinia": "^2.0.0 || ^3.0.0",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.16.5",
    "pinia": "^3.0.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "~5.8.0",
    "vue": "^3.5.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/pinia-plugin-storage.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/pinia-plugin-storage/issues"
  },
  "homepage": "https://github.com/yourusername/pinia-plugin-storage#readme"
}
